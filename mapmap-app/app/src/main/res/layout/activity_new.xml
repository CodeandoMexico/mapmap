<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF5E1"
    android:gravity="center|center_horizontal|start|end|top"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".NewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/app_logo"
            android:contentDescription="MapMap" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passengerImageView"
        android:layout_alignLeft="@+id/passengerImageView"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/descripcionLabel"
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción de la Ruta (Opcional)"
            android:textColor="@color/text_color_blue" />

        <EditText
            android:id="@+id/descripcionInputText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:ems="7"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/notasLabel"
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Notas (Opcional)"
            android:textColor="@color/text_color_blue" />

        <EditText
            android:id="@+id/notasInputText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:ems="7"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tipoVehiculoLabel"
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Tipo de Vehículo (Opcional)"
            android:textColor="@color/text_color_blue" />

        <EditText
            android:id="@+id/tipoVehiculoInputText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:ems="7"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/capacidadVehiculoLabel"
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Capacidad del Vehículo (Opcional)"
            android:textColor="@color/text_color_blue" />

        <EditText
            android:id="@+id/capacidadVehiculoInputText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:ems="7"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_weight="5"
            android:gravity="right">

            <ImageButton
                android:id="@+id/botonCapturaImagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:src="@drawable/foto" />

            <TextView
                android:id="@+id/adjuntarFotoLabel"
                style="@style/text_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="Adjuntar foto de la unidad de transporte"
                android:textColor="@color/text_color_blue" />

            <ImageView
                android:id="@+id/imagenBus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:gravity="end|center_vertical"
                android:maxWidth="100dip"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_gallery" />
        </LinearLayout>

        <requestFocus />

        <ImageButton
            android:id="@+id/botonContinuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@null"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/continuar" />

    </LinearLayout>


</LinearLayout>